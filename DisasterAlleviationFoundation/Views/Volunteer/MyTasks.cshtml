@model IEnumerable<DisasterAlleviationFoundation.Models.VolunteerSignUp>

@{
    ViewData["Title"] = "My Volunteer Tasks";
}

<h1>My Volunteer Tasks</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You haven't signed up for any volunteer tasks yet.
        <a asp-action="Tasks" class="alert-link">Browse available tasks</a>.
    </div>
}
else
{
    <div class="row">
        @foreach (var signup in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@signup.VolunteerTask?.Title</h5>
                        <span class="badge bg-info float-end">@signup.Status</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@signup.VolunteerTask?.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Location:</strong> @signup.VolunteerTask?.Location
                            </li>
                            <li class="list-group-item">
                                <strong>Date:</strong> @signup.VolunteerTask?.TaskDate.ToString("yyyy-MM-dd HH:mm")
                            </li>
                            <li class="list-group-item">
                                <strong>Signed Up On:</strong> @signup.SignedUpAt.ToString("yyyy-MM-dd HH:mm")
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer">
                        <form asp-action="CancelSignUp" method="post">
                            <input type="hidden" name="id" value="@signup.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to cancel this volunteer sign-up?')">
                                Cancel Sign-up
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-3">
    <a asp-action="Tasks" class="btn btn-primary">Browse More Tasks</a>
</div>