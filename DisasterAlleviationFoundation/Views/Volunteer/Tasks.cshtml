@model IEnumerable<DisasterAlleviationFoundation.Models.VolunteerTask>

@{
    ViewData["Title"] = "Volunteer Tasks";
}

<h1>Volunteer Tasks</h1>

<p>
    <a asp-action="CreateTask" class="btn btn-primary">Create New Task</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card @(item.Status == "Open" ? "border-primary" : "border-secondary")">
                <div class="card-header">
                    <h5 class="card-title">@item.Title</h5>
                    <span class="badge @(item.Status == "Open" ? "bg-success" : "bg-secondary") float-end">
                        @item.Status
                    </span>
                </div>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Location:</strong> @item.Location
                        </li>
                        <li class="list-group-item">
                            <strong>Date:</strong> @item.TaskDate.ToString("yyyy-MM-dd HH:mm")
                        </li>
                        <li class="list-group-item">
                            <strong>Volunteers:</strong> @item.CurrentVolunteers / @item.RequiredVolunteers
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    @if (item.Status == "Open")
                    {
                        <a asp-action="SignUp" asp-route-id="@item.Id" class="btn btn-success btn-sm">Sign Up</a>
                    }
                    <a asp-action="TaskDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    {
                    <a asp-action="EditTask" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No volunteer tasks available at the moment. Check back later or
        <a asp-action="CreateTask" class="alert-link">create a new task</a>.
    </div>
}